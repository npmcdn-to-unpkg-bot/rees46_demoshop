if("<%= @cart.line_items.any?%>" == 'false'){
  window.location.href = "<%= root_url %>";
}else{
  if('<%= @line_item.quantity == 0 %>' == 'true'){
    $('.row_<%= @line_item.id %>').next('.underline').hide();
    $('.row_<%= @line_item.id %>').fadeOut().remove;
  }else{
    $('.quantity_<%= @line_item.id %>').html('<%= @line_item.quantity %>');
  }
}
$('.cart_total').html('Total <%= number_to_currency(@cart.total_price,  unit: "₽ ") %>');
$('.item_total_<%= @line_item.id %>').html('<%= number_to_currency(@line_item.total_price,  unit: "₽ ") %>');
