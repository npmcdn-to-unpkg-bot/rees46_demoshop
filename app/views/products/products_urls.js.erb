<% rec = @recommender %>
<% render_product_template = render 'products/recommender.js.erb', recommender: @recommender %>

<% case rec %>
  <% when 'also_bought' %>
  var recommender = 'also_bought'
  <%= render_product_template %>

  <% when 'interesting') %>
  var recommender = 'interesting'
  <%= render_product_template %>

  <% when 'similar' %>
  var recommender = 'similar'
  <%= render_product_template %>
<% end %>
