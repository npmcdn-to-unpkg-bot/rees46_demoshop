.row
  - @products.limit(12).each do |product|
    .col-sm-6.col-md-3
      .thumbnail
        = link_to image_tag(product.image.medium), product_path(product)
        .caption
          h3= link_to product.title, product_path(product)
        .clearfix
          .pull-left
            p.lead.text-left= number_to_currency(product.price,  unit: "â‚½", precision: 0)
          .pull-right
            = print_stock(product)
            - if product.stock == 0
              button.btn.disabled disabled="disabled"
                  = "OUT OF STOCK"

.clr

