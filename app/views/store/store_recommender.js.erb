<% if (@recommender == 'popular') %>
  $('#recommender_popular').html("<%= j render(partial: 'rees46_popular.slim', locals: { products: @products, recommender: @recommender }) %>");
<% end %>

<% if ( @recommender == 'interesting') %>
  $('#recommender_interesting').html("<%= j render(partial: 'rees46_interesting.slim', locals: { products: @products, recommender: @recommender }) %>");

  $('.delayed-i-flickity').slick({
    infinite: false,
    speed: 500,
    slidesToShow: 4,
    slidesToScroll: 4
  });
<% end %>
