li
  .header_cart
    - if !@cart.try(:line_items).nil?
      = link_to cart_path(@cart)
        span.cart-count
          span.glyphicon.glyphicon-shopping-cart
          span#line_count = "#{@cart.line_items.size}"
    - else
      span.cart-count
        span.glyphicon.glyphicon-shopping-cart
        span#line_count = "0"
