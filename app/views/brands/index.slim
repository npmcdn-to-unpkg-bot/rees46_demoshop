h1 = t 'brand.title'

.container
  .row
    = link_to t('brand.new_brand'), new_brand_path, class: "btn btn-primary"
    br
    br
    h1 = t 'brand.names'
    - @brands.each do |letter, brand|
      .col-md-3.col-sm-4.col-xs-6
        br
        - brand.each do |b|
          li= b.name
          - if current_user && current_user.has_role?(:admin)
            = link_to t('brand.edit'), edit_brand_path(b), class: 'btn btn-primary'
            = link_to t('brand.delete'), b, method: :delete, data: { confirm: t('brand.confirmation') }, class: "btn btn-danger"
  br
  br
  br
