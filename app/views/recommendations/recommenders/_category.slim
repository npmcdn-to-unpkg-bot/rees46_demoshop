javascript:
  var cf_popular = function(data){
    // jQuery code
    if(data.length > 0) {
      $.ajax({
        type: "GET",
        url: 'recommendations',
        data: {ids: data, recommended_by: 'popular'},
      });
      return false;
    } else {
      console.log('popular')
    }
  };

